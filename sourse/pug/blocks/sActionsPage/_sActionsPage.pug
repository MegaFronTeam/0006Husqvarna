mixin actionSlide(imgName, timer=false, days=0, hours=0, mins=0, secs=10)
	+e.slide.swiper-slide
		img.slide-img(src="img/@2x/"+imgName+".jpg" alt='some-img')
		a.slide-content(href="#")
			.slide-txt
				span НАСЛАЖДАЙТЕСЬ
				br
				span ИДЕАЛЬНЫМ ГАЗОНОМ
				br
				span С HUSQVARNA
				br
				span AUTOMOWER®
			if timer
				// it will work if at list one attribute granted
				+b.timer-block.timer-block-js(data-days=days data-hours=hours data-mins=mins data-secs=secs)
					+icon('sand-clock')
					+e.time-amount-bl.days-amount
						span.num=days
						span.txt дня
					+e.two-dots :
					+e.time-amount-bl.hours-amount
						span.num=hours
						span.txt часов
					+e.two-dots :
					+e.time-amount-bl.mins-amount
						span.num=mins
						span.txt мин
					+e.two-dots :
					+e.time-amount-bl.secs-amount
						span.num=secs
						span.txt сек

