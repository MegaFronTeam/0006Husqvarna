mixin actionsSlider()
	+b.actionsSlider
		.slider-action-prev.d-none.d-sm-block
			+icon('angle-left')
		.slider-action-next.d-none.d-sm-block
			+icon('chevron-right')
		.action-slider-puging
		+e.slider.swiper-actions-container(class='actions-slider03')
			.swiper-wrapper
				+actionSlide('artical-5',true, 1)
				+actionSlide('artical-6',true)
				+actionSlide('artical-5',true, 1)
				+actionSlide('artical-6',true)
				+actionSlide('artical-4',true, 0,0,10,0)
				+actionSlide('artical-3')
				+actionSlide('artical-4',true, 0,0,10,0)
				+actionSlide('artical-3')

