mixin search()
	+b.dropdown-block--search
		+b.search-block
			.container
				.row
					.col
						+b.search-line
							.row
								.col-auto.position-static
									+b.dropdown--var.--js
										+e.toggle--var Искать везде 
											+e.toggle-arrow--js
										//- +city()
								.col
									+input("Поиск")
									+e.delete
