												.col-auto
													p Триммер бензиновый Husqvarna 122C
												.col-auto
													+e.price-bl.text-center.m-0.p-0
														.old-price 15 990 ₽
														.new-price 11 490 ₽
										 

					.col-auto
						+e.btn.btn.btn-primary(type="submit")  ИСКАТЬ
mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			+e.row.row
				.col-auto.d-lg-none
					+b.toggle-menu-mobile--js
						span
				.col-lg-auto.col.text-md-center
					+e.logo(href="/")
						img(src="img/svg/logo.svg", alt="")
				.col.d-none.d-lg-block.position-static
					+mnu()
				.col-auto.position-static
					+b.dropdown--search.--js.position-static
						+b.search-toggle--js.text-white 
							+icon("zoom")
							span.d-none.d-lg-inline Поиск
						+search()
				.col-auto.d-md-none
					+e.link(href="#")
						+icon("user")
				.col-auto.d-md-none.position-relative
					+b.dropdown--search.--js
						+e.toggle
							.top-nav__link
								+icon("basket")
						+search()
	// end top-nav